.main{
  position: fixed;
  height:100%;
  width: 100%;
  background-color:black;
  z-index: -999
}
.btn_add{
   position: fixed;
   width: 50px;
   height: 50px;
   right:25px;
   bottom: 25px;
   z-index: 2
}
.data-input{
  color:#ffffff;
  position: fixed;
  top:90px;
  font-size: 20px
}
.top-content{
  border: none;
  z-index: 2;
  height:118px;
   width: 100%;
   position: fixed;
   top: 0px
}
.content{
   top:117px;
   z-index: 0px;
   position: absolute
}
.leftTips{
   position: absolute
}
.rightTips{
   right:0px;
   position: absolute
}
.canvas-complete{
  z-index: 2;
  position: fixed;
  width: 100%;
  height:100px;
  top:0px
}
.userinfo-avatar{
  width: 64px;
  height:64px;
    margin:15px; 
  border-radius:50%;
}
.userinfo-nickname{
  position: fixed;
  color: rgb(192, 129, 129);
  top:15px;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  width: 150px;
  left:94px
}
.motto{
  position: fixed;
  color: rgb(118, 204, 157);
  top:45px;
  text-overflow: ellipsis;
  font-size: 13px;
  overflow: hidden;
  /* white-space: nowrap; */
  width: 150px;
  left:94px
}
.top-yuan-done{
  z-index: 2;
  height:50px;
   width: 50px;
   position: absolute;
   background-color: #00CA9D;
   clip: rect(0px 50px 25px 0px);
   border-radius: 50%;
}
.bottom-yuan-done{
  z-index: 2;
  border: none;
  height:50px;
   width: 50px;
   position: absolute;
   background-color: #00CA9D;
   clip: rect(25px 50px 50px 0px);
   border-radius: 50%;
}
.complete-main-undone{
   z-index: 2;
  height:50px;
   width: 50px;
   position: absolute;
   background-color: #FF8A0C;
   border-radius: 50%;
   top: 13px;
   right:20px
}
